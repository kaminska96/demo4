<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Group ID for the project, used to uniquely identify the project across all projects -->
    <groupId>com.group02</groupId>
    <!-- Artifact ID, the name of the project when packaged -->
    <artifactId>demo4</artifactId>
    <!-- Packaging type for the project, specifies that it will be a WAR file -->
    <packaging>war</packaging>
    <!-- Version of the project -->
    <version>0.0.1-SNAPSHOT</version>
    <!-- Name of the project -->
    <name>demo4</name>

    <build>
        <!-- Final name for the build output -->
        <finalName>demo4</finalName>
        <plugins>
            <plugin>
                <!-- Plugin to handle Java compilation -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <inherited>true</inherited>
                <configuration>
                    <!-- Specify Java version compatibility -->
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <!-- Plugin to package the application as a WAR file -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.4.0</version>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- Manage the version of Jersey dependencies -->
                <groupId>org.glassfish.jersey</groupId>
                <artifactId>jersey-bom</artifactId>
                <version>${jersey.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <!-- Jersey core dependency for servlet container integration -->
            <groupId>org.glassfish.jersey.containers</groupId>
            <artifactId>jersey-container-servlet-core</artifactId>
            <!-- use the following artifactId if you don't need servlet 2.x compatibility -->
            <!-- artifactId>jersey-container-servlet</artifactId -->
        </dependency>
        <dependency>
            <!-- Dependency for Jersey's HK2 injection framework -->
            <groupId>org.glassfish.jersey.inject</groupId>
            <artifactId>jersey-hk2</artifactId>
        </dependency>
        <dependency>
            <!-- Jersey dependency for JSON binding -->
            <groupId>org.glassfish.jersey.media</groupId>
            <artifactId>jersey-media-json-binding</artifactId>
        </dependency>
        <dependency>
            <!-- JSON processing library -->
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>20240303</version>
        </dependency>
        <dependency>
            <!-- Dependency for Jakarta XML binding API -->
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
            <version>4.0.2</version>
        </dependency>
        <dependency>
            <!-- BCrypt library for hashing passwords -->
            <groupId>org.mindrot</groupId>
            <artifactId>jbcrypt</artifactId>
            <version>0.4</version>
        </dependency>
        <dependency>
            <!-- Servlet API dependency, provided by the container -->
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <version>6.1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <!-- Apache Commons Codec library for encoding and decoding -->
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.15</version>
        </dependency>
        <dependency>
            <!-- Jersey security project for implementing security features -->
            <groupId>org.glassfish.jersey.security</groupId>
            <artifactId>project</artifactId>
            <version>2.45</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <!-- JJWT API for JWT handling -->
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
            <version>0.11.2</version>
        </dependency>
        <dependency>
            <!-- JJWT implementation library -->
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-impl</artifactId>
            <version>0.11.2</version>
        </dependency>
        <dependency>
            <!-- JJWT Jackson library for JSON serialization and deserialization -->
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-jackson</artifactId>
            <version>0.11.2</version>
        </dependency>
    </dependencies>

    <properties>
        <!-- Jersey version property for version management -->
        <jersey.version>2.45</jersey.version>
        <!-- Set the source encoding for the project -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- WAR plugin version property -->
        <war.mvn.plugin.version>3.4.0</war.mvn.plugin.version>
    </properties>
</project>
